# AWS Configuration
# Replace with your actual AWS account ID and preferred region
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=ap-southeast-1
AWS_PROFILE=default
ENVIRONMENT=dev
OWNER=face-recognition-team

# Monitoring Configuration
# Replace with your actual email for alerts
ALERT_EMAIL=admin@example.com

# Regional Configuration
AWS_REGION=ap-southeast-1

# Optional: Custom Domain Configuration
# Uncomment and configure if you want to use a custom domain
# DOMAIN_NAME=face-recognition.example.com
# CERTIFICATE_ARN=arn:aws:acm:ap-southeast-1:your-account-id:certificate/your-cert-id

# OpenSearch Configuration for Singapore Region
OPENSEARCH_INSTANCE_TYPE=t3.small.search
OPENSEARCH_INSTANCE_COUNT=1
OPENSEARCH_VOLUME_SIZE=100

# Lambda Configuration
LAMBDA_MEMORY_SIZE=1024
LAMBDA_TIMEOUT=300
LAMBDA_RESERVED_CONCURRENCY=10

# Development Configuration
# Set to 'prod' for production deployment
ENVIRONMENT=dev
